generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model clients {
  clientId        Int       @id @default(autoincrement()) @unique
  firstName     String      @db.VarChar(250)
  lastName      String      @db.VarChar(250)
  email         String      @db.VarChar(250) @unique
  phone         String      @db.VarChar(250) @unique
  password      String      @db.VarChar(250)
  isActive      String      @default("1") @db.Char(1)
  registeredAt  DateTime   	@default(now())
  expires				DateTime   	@default(now())
  admin         Boolean     @default(false)
  orders        orders[]
}

model services {
  serviceId     Int         @id @default(autoincrement()) @unique
  title         String      @db.VarChar(250) @unique
  staffs        staff[]
  orders        orders[]
}

model staff {
  staffId       Int         @id @default(autoincrement()) @unique
  firstName     String      @db.VarChar(250)
  service       services    @relation(fields: [serviceId], references: [serviceId])
  serviceId     Int
  orders        orders[]
}

model orders {
  odrderId      Int         @id @default(autoincrement()) @unique
  date          DateTime    @default(now())
  status        String      @db.VarChar(250) @default("work")
  serviceId     Int
  staffId       Int
  clientId      Int
  client        clients     @relation(fields: [clientId], references: [clientId])
  service       services    @relation(fields: [serviceId], references: [serviceId])
  staff         staff       @relation(fields: [staffId], references: [staffId]) 
}